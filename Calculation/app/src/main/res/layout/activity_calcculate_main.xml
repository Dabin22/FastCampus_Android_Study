<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.leedabin.android.calculation.CalcculateMainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:gravity="right"
        android:text="0"
        android:layout_above="@+id/button2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="AC"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="123dp"
        android:onClick="pushAc" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="รท"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textSize="30dp"
        android:onClick="pushDivide" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="X"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textSize="30dp"
        android:onClick="pushMulti" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="CANCLE"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:onClick="btn_cancle" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btn_num7" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:onClick="btn_num8" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:onClick="btn_num9" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="%"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:textSize="30dp"
        android:onClick="btn_remain" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/button9"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btn_num4" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:onClick="btn_num5" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button10"
        android:layout_toRightOf="@+id/button10"
        android:layout_toEndOf="@+id/button10"
        android:onClick="btn_num6" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/button11"
        android:layout_toRightOf="@+id/button11"
        android:layout_toEndOf="@+id/button11"
        android:textSize="30dp"
        android:onClick="btn_minus" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/button13"
        android:layout_below="@+id/button9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btn_num1" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/button14"
        android:layout_alignTop="@+id/button13"
        android:layout_toRightOf="@+id/button13"
        android:layout_toEndOf="@+id/button13"
        android:onClick="btn_num2" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/button15"
        android:layout_alignTop="@+id/button14"
        android:layout_toRightOf="@+id/button14"
        android:layout_toEndOf="@+id/button14"
        android:onClick="btn_num3" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button15"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15"
        android:textSize="30dp"
        android:onClick="btn_plus" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/button17"
        android:layout_below="@+id/button13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="btn_num0" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/button18"
        android:layout_alignTop="@+id/button17"
        android:layout_toRightOf="@+id/button17"
        android:layout_toEndOf="@+id/button17"
        android:onClick="btn_dot" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="( )"
        android:id="@+id/button19"
        android:layout_alignTop="@+id/button18"
        android:layout_toRightOf="@+id/button18"
        android:layout_toEndOf="@+id/button18"
        android:onClick="btn_bracket" />

    <Button
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/button20"
        android:layout_alignTop="@+id/button19"
        android:layout_toRightOf="@+id/button19"
        android:layout_toEndOf="@+id/button19"
        android:textSize="30dp"
        android:onClick="btn_result" />


</RelativeLayout>