<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leedabin.android.activitybasic01">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleInstance"> <!-- 하나의 인텐트만 사용하여 하나의 액티비티 인스턴스 생성-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity2" />
        <activity android:name=".Activity3" />
        <activity android:name=".Activity4"
            android:theme="@style/Theme.AppCompat.Translucent"/> <!-- appcompatactivity에서 투명 테마가 없어서 커스텀하여 사용-->
        <activity android:name=".Activity5"></activity>
    </application>

</manifest>